{{#if user.role}}
<div class="row">
    <!-- Column -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-hover">
            <div class="box bg-cyan px-3">
                <h1 class="font-light text-white"><i class="fas fa-user-plus"></i></h1>
                <h6 class="text-white">Nombre du client</h6>
                <ul class="list-inline two-part d-flex align-items-center mb-0">
                    <li class="ms-auto"><span class="counter text-white">{{nombreTotalClient}}</span>
                </ul>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-hover">
            <div class="box bg-success px-3">
                <h1 class="font-light text-white"><i class="fas fa-users"></i></h1>
                <h6 class="text-white">Nombre d'employé</h6>
                <ul class="list-inline two-part d-flex align-items-center mb-0">
                    <li class="ms-auto"><span class="counter text-white">{{nombreTotalUser}}</span>
                </ul>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-hover">
            <div class="box bg-warning px-3">
                <h1 class="font-light text-white"><i class="fas fa-tags"></i></h1>
                <h6 class="text-white">Nombre du service</h6>
                <ul class="list-inline two-part d-flex align-items-center mb-0">
                    <li class="ms-auto"><span class="counter text-white">{{nombreTotalService}}</span>
                </ul>
            </div>
        </div>
    </div>
    <!-- Column -->
    <div class="col-md-6 col-lg-3">
        <div class="card card-hover">
            <div class="box bg-danger px-3">
                <h1 class="font-light text-white"><i class="fas fa-money-bill-alt"></i></h1>
                <h6 class="text-white">Portefeuille en attente</h6>
                <ul class="list-inline two-part d-flex align-items-center mb-0">
                    <li class="ms-auto"><span class="counter text-white">{{nombreTotalWallet}}</span>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <div class="accordion" id="accordionExample1">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed bg-white shadow-none text-black fw-bolder" type="button"
                        data-bs-toggle="collapse" data-bs-target="#collapseOne1" aria-expanded="false"
                        aria-controls="collapseOne">
                        Statistique nombre de réservation par jour du mois de {{moisEncours}} en {{year}}
                    </button>
                </h2>
                <div id="collapseOne1" class="accordion-collapse collapse bg-white" aria-labelledby="headingOne"
                    data-bs-parent="#accordionExample1">
                    <div class="grid-margin stretch-card">
                        <div class="card h-400 m-0 mb-4">
                            <div class="card-body">
                                <div class="clearfix">
                                    <div id="visit-sale-chart-legend-one"
                                        class="rounded-legend legend-horizontal legend-top-right float-right ms-0"></div>
                                </div>
                                <canvas id="visit-sale-chart-one" class="mt-4"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="accordion" id="accordionExample2">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button collapsed bg-white shadow-none text-black fw-bolder" type="button"
                        data-bs-toggle="collapse" data-bs-target="#collapseOne2" aria-expanded="false"
                        aria-controls="collapseOne">
