                            <div class="card-body">
                                <div class="clearfix">
                                    <div id="visit-sale-chart-legend-four"
                                        class="rounded-legend legend-horizontal legend-top-right float-right ms-0"></div>
                                </div>
                                <canvas id="visit-sale-chart-four" class="mt-4"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
