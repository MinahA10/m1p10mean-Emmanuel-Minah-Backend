<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="my-4 mx-4">
                <h4 class="card-title fw-bold">Modifier mot de passe</h3>
                <form action="/auth/update-password" method="post">
                    {{#if error }}
                        <div class="text-center alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>{{ error }}</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {{/if}}
                    <div class="row mt-4">
                        <div class="col-md-4 mb-3">
                            <label for="oldPassword" class="form-label">Encien mot de passe <span class="required">*</span></label>
                            <input type="password" class="form-control" name="oldPassword" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="newPassword" class="form-label">Nouveau mot de passe <span class="required">*</span></label>
                            <input type="password" class="form-control" name="newPassword" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label for="confirmNewPassword" class="form-label">Confirme nouveau mot de passe <span class="required">*</span></label>
                            <input type="password" class="form-control" name="confirmNewPassword" required>
                        </div>
                        <div class="col-md-4 my-3">
                            <button type="submit" class="btn btn-outline-success"><i class="fas fa-save"></i> Enregistrer</button> 
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>